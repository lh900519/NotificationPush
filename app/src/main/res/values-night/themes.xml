<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="base" parent="Theme.AppCompat">
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="android:colorControlNormal">?android:attr/colorAccent</item>
        <item name="android:colorControlActivated">?android:attr/colorAccent</item>
        <item name="android:colorEdgeEffect">?android:attr/colorAccent</item>
        <item name="android:textViewStyle">@style/actionBarTheme</item>
        <item name="colorPrimary">#000000</item>
    </style>

    <style name="actionBarTheme">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AlertDialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:colorAccent">?android:attr/color</item>
        <item name="colorAccent">?android:attr/color</item>
    </style>
</resources>