<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="base" parent="Theme.MaterialComponents.DayNight">
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">?android:attr/color</item>
        <item name="colorPrimaryVariant">?android:attr/color</item>
        <item name="colorOnPrimary">?android:attr/color</item>
        <item name="colorSecondary">?android:attr/color</item>
        <item name="colorSecondaryVariant">?android:attr/color</item>
        <item name="colorOnSecondary">?android:attr/color</item>
        <item name="android:statusBarColor">@color/actionBarColor</item>
        <item name="android:navigationBarColor" tools:targetApi="27">@android:color/transparent
        </item>
        <item name="actionBarStyle">@style/actionBar</item>
        <item name="android:colorControlNormal">?android:attr/colorAccent</item>
        <item name="android:colorControlActivated">?android:attr/colorAccent</item>
        <item name="android:colorEdgeEffect">?android:attr/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="base.DayNight">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="actionBar" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="background">@color/actionBarColor</item>
    </style>

    <!-- Base application theme. -->
    <style name="base.DayNight.AppTheme_teal">
        <item name="android:color">@color/teal</item>
        <item name="android:colorAccent">@color/teal</item>
    </style>

    <style name="base.DayNight.AppTheme_red">
        <item name="android:color">@color/red</item>
        <item name="android:colorAccent">@color/red</item>
    </style>

    <style name="base.DayNight.AppTheme_pink">
        <item name="android:color">@color/pink</item>
        <item name="android:colorAccent">@color/pink</item>
    </style>

    <style name="base.DayNight.AppTheme_purple">
        <item name="android:color">@color/purple</item>
        <item name="android:colorAccent">@color/purple</item>
    </style>

    <style name="base.DayNight.AppTheme_blue">
        <item name="android:color">@color/blue</item>
        <item name="android:colorAccent">@color/blue</item>
    </style>

    <style name="base.DayNight.AppTheme_yellow">
        <item name="android:color">@color/yellow</item>
        <item name="android:colorAccent">@color/yellow</item>
    </style>

    <style name="base.DayNight.AppTheme_grey">
        <item name="android:color">@color/grey</item>
        <item name="android:colorAccent">@color/grey</item>
    </style>
</resources>
